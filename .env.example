# =============================================================================
# Meeting Transcription API - Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Required: HuggingFace Access Token
# -----------------------------------------------------------------------------
# Required for pyannote.audio diarization models
# Get your token at: https://huggingface.co/settings/tokens
# You must also accept the model terms at:
# https://huggingface.co/pyannote/speaker-diarization-3.1
HUGGINGFACE_ACCESS_TOKEN=your_hf_access_token_here

# -----------------------------------------------------------------------------
# Whisper Settings
# -----------------------------------------------------------------------------
# Model size: tiny, base, small, medium, large, large-v3
# Larger models = better accuracy but slower and more VRAM
WHISPER_MODEL=base

# Device override (auto-detected if not set)
# Options: cuda, mps, cpu
# WHISPER_DEVICE=cuda

# -----------------------------------------------------------------------------
# Diarization Settings
# -----------------------------------------------------------------------------
# PyAnnote model to use for speaker diarization
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1

# Optional speaker count hints (leave unset for auto-detection)
# MIN_SPEAKERS=2
# MAX_SPEAKERS=5

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
# Redis URL for Celery task queue and result backend
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Processing Limits
# -----------------------------------------------------------------------------
# Maximum audio duration in seconds (default: 3600 = 1 hour)
MAX_AUDIO_DURATION_SECONDS=3600

# Maximum upload file size in MB (default: 500)
MAX_UPLOAD_SIZE_MB=500

# How long to keep results in Redis (default: 24 hours)
RESULT_TTL_HOURS=24

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
# Host and port for the API server
API_HOST=0.0.0.0
API_PORT=8000

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=["*"]

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Output logs as JSON (recommended for production)
LOG_JSON=false

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Preload models on startup (uses more memory but faster first request)
PRELOAD_MODELS=false
